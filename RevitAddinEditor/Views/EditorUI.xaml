<Window x:Class="RevitAddinEditor.Views.EditorUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RevitAddinEditor.ViewModels"
        xmlns:local="clr-namespace:RevitAddinEditor.Views"
        xmlns:cmd="clr-namespace:RevitAddinEditor.Commands"
        xmlns:cc="clr-namespace:CustomRevitControls;assembly=CustomRevitControls"
        mc:Ignorable="d"
        Title="EditorUI" Height="450" Width="800">
    <Window.DataContext>
        <vm:EditorViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="190*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Column="0">
            <MenuItem Header="File" Margin="2,1,2,0" VerticalAlignment="Center">
                <MenuItem Header="Set assembly" Command="{Binding SetAssemblyCommand}"/>
                <MenuItem Header="Export as xml" Command="{Binding ExportSettings}"/>
                <MenuItem Header="Import xml" Command="{Binding ImportSettings}"/>
            </MenuItem>
        </Menu>
        <ListBox Grid.Column="0" Grid.Row="1" Margin="10,10,10,10" 
                 ItemsSource="{Binding RevitItems}">
        </ListBox>
        <ListBox Grid.Row="1" Grid.Column="1" Margin="10" 
                 ItemsSource="{Binding Controls}" SelectedItem="{Binding SelectedControl}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemHeight="100"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <ListBox Grid.Row="2" Grid.Column="0" Margin="10,10,10,30"
                 ItemsSource="{Binding Panels}" SelectedItem="{Binding SelectedPanel}">

        </ListBox>
        <Button Grid.Row="2" Grid.Column="0" Content="Add" VerticalAlignment="Bottom" 
                HorizontalAlignment="Left" Margin="10,0,0,5" Width="70"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Remove" VerticalAlignment="Bottom"
                HorizontalAlignment="Right" Margin="0,0,10,5" Width="70"/>

        <Button Grid.Column="1" Grid.Row="2" Margin="10,10,465,150" Content="+"
                Command="{Binding OpenItemsEditorCommand}"/>
        <Button Grid.Column="1" Grid.Row="2" Margin="160,10,315,150" Content="-"
                Command="{Binding DeleteControlCommand}"/>
        <!--<ListView Grid.Column="1" Margin="340,10,10,30" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Icon" Width="100"/>
                <TextBox Width="100" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Text" Width="100"/>
                <TextBox Width="100" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Items" Width="100"/>
                <Button Width="37" Margin="5,0,0,0" Content=". . ."/>
            </StackPanel>
            <Button Width="50" Height="20" Content="Update"/>
        </ListView>-->

    </Grid>
</Window>
